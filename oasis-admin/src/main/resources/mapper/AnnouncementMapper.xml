<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.kevin.oasis.dao.AnnouncementDao">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.github.kevin.oasis.models.entity.Announcement">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, title, content, type, create_by, create_time, update_by, update_time
    </sql>

    <!-- 查询公告列表（分页） -->
    <select id="selectAnnouncementList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM announcement
        <where>
            <if test="request.title != null and request.title != ''">
                AND title LIKE CONCAT('%', #{request.title}, '%')
            </if>
            <if test="request.type != null and request.type != ''">
                AND type = #{request.type}
            </if>
        </where>
        ORDER BY create_time DESC
        <if test="request.current != null and request.size != null">
            LIMIT #{request.size} OFFSET #{request.current}
        </if>
    </select>

    <!-- 查询公告总数 -->
    <select id="countAnnouncementList" resultType="long">
        SELECT COUNT(*)
        FROM announcement
        <where>
            <if test="request.title != null and request.title != ''">
                AND title LIKE CONCAT('%', #{request.title}, '%')
            </if>
            <if test="request.type != null and request.type != ''">
                AND type = #{request.type}
            </if>
        </where>
    </select>

    <!-- 根据ID查询公告 -->
    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM announcement
        WHERE id = #{id}
    </select>

    <!-- 查询最新公告（按创建时间倒序的第一条） -->
    <select id="selectLatestAnnouncement" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM announcement
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 插入公告 -->
    <insert id="insert" parameterType="com.github.kevin.oasis.models.entity.Announcement" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO announcement (title, content, type, create_by, create_time, update_by, update_time)
        VALUES (#{title}, #{content}, #{type}, #{createBy}, NOW(), #{updateBy}, NOW())
    </insert>

    <!-- 更新公告 -->
    <update id="update" parameterType="com.github.kevin.oasis.models.entity.Announcement">
        UPDATE announcement
        SET title       = #{title},
            content     = #{content},
            type        = #{type},
            update_by   = #{updateBy},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 批量删除公告 -->
    <delete id="deleteAnnouncementsByIds">
        DELETE FROM announcement
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>

