<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.kevin.oasis.dao.RoleMenuDao">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.github.kevin.oasis.models.entity.RoleMenu">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="menu_id" property="menuId" jdbcType="BIGINT"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 根据角色ID查询菜单ID列表（仅返回启用的菜单） -->
    <select id="selectMenuIdsByRoleId" resultType="long">
        SELECT rm.menu_id
        FROM role_menu rm
        INNER JOIN menu m ON rm.menu_id = m.id
        WHERE rm.role_id = #{roleId}
        AND m.status = 1
    </select>

    <!-- 根据角色ID删除角色菜单关联 -->
    <delete id="deleteByRoleId">
        DELETE FROM role_menu
        WHERE role_id = #{roleId}
    </delete>

    <!-- 批量插入角色菜单关联 -->
    <insert id="batchInsert">
        INSERT INTO role_menu (role_id, menu_id, create_by, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.menuId}, #{item.createBy}, NOW())
        </foreach>
    </insert>

    <!-- 根据角色ID列表删除角色菜单关联 -->
    <delete id="deleteByRoleIds">
        DELETE FROM role_menu
        WHERE role_id IN
        <foreach collection="roleIds" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

    <!-- 根据菜单ID删除角色菜单关联 -->
    <delete id="deleteByMenuId">
        DELETE FROM role_menu
        WHERE menu_id = #{menuId}
    </delete>

    <!-- 根据菜单ID列表删除角色菜单关联 -->
    <delete id="deleteByMenuIds">
        DELETE FROM role_menu
        WHERE menu_id IN
        <foreach collection="menuIds" item="menuId" open="(" separator="," close=")">
            #{menuId}
        </foreach>
    </delete>

</mapper>

