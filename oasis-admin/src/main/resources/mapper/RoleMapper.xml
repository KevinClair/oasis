<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.kevin.oasis.dao.RoleDao">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.github.kevin.oasis.models.entity.Role">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="role_code" property="roleCode" jdbcType="VARCHAR"/>
        <result column="role_desc" property="roleDesc" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="BOOLEAN"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id
        , role_name, role_code, role_desc, status,
        create_by, create_time, update_by, update_time
    </sql>

    <!-- 查询角色列表（分页） -->
    <select id="selectRoleList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        <where>
            <if test="request.roleName != null and request.roleName != ''">
                AND role_name LIKE CONCAT('%', #{request.roleName}, '%')
            </if>
            <if test="request.roleCode != null and request.roleCode != ''">
                AND role_code LIKE CONCAT('%', #{request.roleCode}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
        </where>
        ORDER BY create_time DESC
        <if test="request.current != null and request.size != null">
            LIMIT #{request.size} OFFSET #{request.current}
        </if>
    </select>

    <!-- 查询角色总数 -->
    <select id="countRoleList" resultType="long">
        SELECT COUNT(*)
        FROM role
        <where>
            <if test="request.roleName != null and request.roleName != ''">
                AND role_name LIKE CONCAT('%', #{request.roleName}, '%')
            </if>
            <if test="request.roleCode != null and request.roleCode != ''">
                AND role_code LIKE CONCAT('%', #{request.roleCode}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
        </where>
    </select>

    <!-- 根据ID查询角色 -->
    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE id = #{id}
    </select>

    <!-- 根据角色编码查询角色 -->
    <select id="selectByRoleCode" parameterType="string" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE role_code = #{roleCode}
    </select>

    <!-- 插入角色 -->
    <insert id="insert" parameterType="com.github.kevin.oasis.models.entity.Role" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO role (role_name, role_code, role_desc, status,
                          create_by, create_time, update_by, update_time)
        VALUES (#{roleName}, #{roleCode}, #{roleDesc}, #{status},
                #{createBy}, NOW(), #{updateBy}, NOW())
    </insert>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.github.kevin.oasis.models.entity.Role">
        UPDATE role
        SET role_name   = #{roleName},
            role_code   = #{roleCode},
            role_desc   = #{roleDesc},
            status      = #{status},
            update_by   = #{updateBy},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 批量删除角色 -->
    <delete id="deleteRolesByIds">
        DELETE FROM role
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 切换角色状态（启用/禁用） -->
    <update id="toggleRoleStatus">
        UPDATE role
        SET status = NOT status,
        update_time = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 查询所有启用的角色 -->
    <select id="selectAllEnabledRoles" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE status = TRUE
        ORDER BY create_time ASC
    </select>

</mapper>

